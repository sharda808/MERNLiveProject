<%- include('../partials/head') %>
</head>
<body class="min-h-screen bg-gray-100">
  <%- include('../partials/nav') %>
  <main class="w-full px-6 py-10">
    <h1 class="text-4xl font-extrabold text-blue-900 mb-10 text-center">
      Here is your home
    </h1>
    <div class="w-full">
        <div class="bg-white shadow-md overflow-hidden">
        <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-96 object-cover">
        <div class="p-8">
          <h2 class="text-3xl font-bold text-blue-900 mb-4">
            <%= home.houseName %>
          </h2>
          <p class="text-lg text-gray-700 mb-2">
            <span class="font-semibold">Price:</span> ₹<%= home.price %>
          </p>
          <p class="text-lg text-gray-700 mb-2">
            <span class="font-semibold">Location:</span> <%= home.location %>
          </p>

          <p class="text-lg text-gray-700">
            <span class="font-semibold">Rating:</span> <%= home.rating %> ⭐
          </p>
          <div class="mt-4">
<a href="/rules/<%= home._id %>"
  class="text-blue-500 hover:text-blue-900"
  >House Rules</a>
          </div>
          <div class ="space-y-4">
<%- include('../partials/add-to-favourite',{home:home}) %>
    </div>
        </div>
      </div>
    </div>
  </main>

</body>
</html>


