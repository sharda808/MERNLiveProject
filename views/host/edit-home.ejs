 <%- include('../partials/head')%>
</head>
<body class="min-h-screen bg-gray-100">
 <%- include('../partials/nav')%>
  
    <h1 class="text-3xl font-bold text-blue-900 mb-6 text-center mt-4"><%=editing ? "Edit" :"Add"%>
      Your Home
    </h1>
<form action="/host/<%=editing ?"edit-home" :"add-home"%>" 
  method="POST"
  enctype = "multipart/form-data"
  class="space-y-6 max-w-md mx-auto">
  <input type="hidden" name="id" value="<%=editing ? home._id:''%>" />
  <div class="">
    <input
      type="text"
      name="houseName"
      value="<%=editing ? home.houseName :''%>"
      placeholder="Name of your house"
      class="w-full px-4 py-3 border border-gray-300 rounded-lg
             focus:outline-none focus:ring-2 focus:ring-blue-900
             focus:border-transparent text-gray-800 mb-3"
     
    />
        <input
      type="text"
      name="price"
       value="<%=editing ? home.price :''%>"
      placeholder="Price"
      class="w-full px-4 py-3 border border-gray-300 rounded-lg
             focus:outline-none focus:ring-2 focus:ring-blue-900
             focus:border-transparent text-gray-800 mb-3"
       />
        <input
      type="text"
      name="location"
       value="<%=editing ? home.location :''%>"
      placeholder="Where is your Home"
      class="w-full px-4 py-3 border border-gray-300 rounded-lg
             focus:outline-none focus:ring-2 focus:ring-blue-900
             focus:border-transparent text-gray-800 mb-3"
     
    />
       <input
      type="text"
      name="rating"
       value="<%=editing ? home.rating :''%>"
      placeholder="rating of the house"
      class="w-full px-4 py-3 border border-gray-300 rounded-lg
             focus:outline-none focus:ring-2 focus:ring-blue-900
             focus:border-transparent text-gray-800 mb-3"
        />
        <input
      type="file"
      name="photo"
      
     
      class="w-full px-4 py-3 border border-gray-300 rounded-lg
             focus:outline-none focus:ring-2 focus:ring-blue-900
             focus:border-transparent text-gray-800 mb-3"
         />
     <textarea
  name="description"
  placeholder="Describe your house"
  class="w-full px-4 py-3 border border-gray-300 rounded-lg
         focus:outline-none focus:ring-2 focus:ring-blue-900
         focus:border-transparent text-gray-800 mb-3"
><%= editing ? home.description : '' %></textarea>
      </div>
  <div>
    <input 
      type="submit"
      value="<%=editing ? "Update" :"Add"%> Home"
      class="w-full bg-blue-900 text-white py-3 rounded-lg
             font-semibold cursor-pointer
             hover:bg-blue-800 transition duration-300 shadow-md"
    />
  </div>
</form>
</main>
</body>
</html>
