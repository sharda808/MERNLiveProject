<%- include('../partials/head') %>
</head>
<body class="min-h-screen bg-gray-100">
  <%- include('../partials/nav') %>
  <main class="max-w-6xl mx-auto px-6 py-10">
    <h1 class="text-4xl font-extrabold text-blue-900 mb-10 text-center">
   All Host Homes
    </h1>
    <div class="flex flex-wrap -mx-4">
      <% homes.forEach(home => { %>
        <div class="w-full sm:w-1/2 md:w-1/3 px-4 mb-8">
          <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition duration-300">
         
            <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover">

            <div class="p-6">
         
              <h2 class="text-xl font-bold text-blue-900 mb-2">
                <%= home.houseName %>
              </h2>

              <p class="text-gray-700 mb-1">
                <span class="font-semibold">Price:</span> ₹<%= home.price %>
              </p>

             
              <p class="text-gray-700 mb-1">
                <span class="font-semibold">Location:</span> <%= home.location %>
              </p>

        
              <p class="text-gray-700 mb-3">
                <span class="font-semibold">Rating:</span> <%= home.rating %> ⭐
              </p>
           <a href="/host/edit-home/<%= home._id %>?editing=true" class="inline-block bg-yellow-900 text-white px-4 py-2 rounded-lg hover:bg-yellow-800 transition float-right m-1">
               Edit
              </a>
             <form action="/host/delete-home/<%= home._id %>" method="post">
<button class="inline-block bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition float-right m-1">Delete</button>
             </form> 
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </main>

</body>
</html>



