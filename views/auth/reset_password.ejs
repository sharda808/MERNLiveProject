 <%- include('../partials/head')%>
</head>
<body class="min-h-screen bg-gray-100">
 <%- include('../partials/nav')%>
  
    <h1 class="text-3xl font-bold text-blue-900 mb-6 text-center mt-4"> Reset Password
    </h1>
<form action="/auth/reset-password"
  method="POST" 
  class="space-y-6 max-w-md mx-auto">
 <%- include('../partials/error-messages')%>

  <div>
        <input
          disabled
         value="<%= email %>"
           class="w-full px-4 py-3 border border-gray-300 rounded-lg
             focus:outline-none focus:ring-2 focus:ring-blue-900
             focus:border-transparent text-gray-800 mb-3"
     
    />
         <input
      type="hidden"
      name="email"
    
         value="<%= email %>"
           class="w-full px-4 py-3 border border-gray-300 rounded-lg
             focus:outline-none focus:ring-2 focus:ring-blue-900
             focus:border-transparent text-gray-800 mb-3"
     
    />
          <input
      type="text"
      name="otp"
  placeholder="OTP"
           class="w-full px-4 py-3 border border-gray-300 rounded-lg
             focus:outline-none focus:ring-2 focus:ring-blue-900
             focus:border-transparent text-gray-800 mb-3"
     
    />
        <input
      type="password"
      name="password"
     
          placeholder="New Password"
      class="w-full px-4 py-3 border border-gray-300 rounded-lg
             focus:outline-none focus:ring-2 focus:ring-blue-900
             focus:border-transparent text-gray-800 mb-3"
   
    />
        <input
      type="password"
      name="confirm_password"
          placeholder="Confirm Password"
      class="w-full px-4 py-3 border border-gray-300 rounded-lg
             focus:outline-none focus:ring-2 focus:ring-blue-900
             focus:border-transparent text-gray-800 mb-3"
   
    />
              </div>


</div>

</div>
  <div>
    <input 
      type="submit"
      value="Save New Password"
      class="w-full bg-green-500 text-white py-3 rounded-lg
             font-semibold cursor-pointer
             hover:bg-green-600 transition duration-300 shadow-md"
    />
  </div>
</form>
</main>
</body>
</html>